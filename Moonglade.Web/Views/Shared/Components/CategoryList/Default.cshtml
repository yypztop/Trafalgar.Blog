@model IReadOnlyList<Moonglade.Core.Category>

@if (Model.Count > 0)
{
    <div class="card-body">
        @foreach (var item in Model.OrderBy(c => c.DisplayName))
        {
            <a class="d-block mb-3 mt-2"
               asp-controller="Home"
               asp-action="CategoryList"
               asp-route-routeName="@item.RouteName.ToLower()"
               title="@item.Note">
                <i class="icon-folder mr-1"></i>
                @item.DisplayName
            </a>
        }

        <hr />
        <a asp-controller="Home" asp-action="Featured" class="d-block">
            <i class="icon-star-full mr-1 text-warning"></i>
            Featured
        </a>
    </div>
}
else
{
    <div class="alert alert-info">
        No Categories
    </div>
}